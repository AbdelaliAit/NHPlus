<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="900.0" prefWidth="855.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AllCareGiverController">
   <children>
      <TableView fx:id="tableView" editable="true" layoutX="31.0" layoutY="120.0" prefHeight="287.0" prefWidth="825.0" AnchorPane.bottomAnchor="130.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="80.0">

         <columns>
            <TableColumn fx:id="colID" maxWidth="1200.0" minWidth="5.0" prefWidth="5.0" text="ID" />
            <TableColumn fx:id="colSurname" onEditCommit="#handleOnEditSurname" maxWidth="7500.0" minWidth="20.0" prefWidth="100.0" text="Nachname" />
            <TableColumn fx:id="colFirstName" onEditCommit="#handleOnEditFirstname" maxWidth="7500.0" prefWidth="75.0" text="Vorname" />
            <TableColumn fx:id="colUserName" onEditCommit="#handleOnEditUsername" maxWidth="7500.0" prefWidth="75.0" text="Benutzername" />
            <TableColumn fx:id="colTelephone" onEditCommit="#handleOnEditTelephone" maxWidth="7500.0" prefWidth="75.0" text="Telefon" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <HBox layoutX="420.0" layoutY="450.0" spacing="10.0" AnchorPane.bottomAnchor="70.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0">
         <children>
            <TextField fx:id="txtSurname" prefHeight="26.0" prefWidth="220.0" promptText="Nachname" />
            <TextField fx:id="txtFirstname" prefHeight="26.0" prefWidth="220.0" promptText="Vorname" />
            <TextField fx:id="txtTelephone" prefWidth="180.0" promptText="Telefonnummer" />
            <Button fx:id="btnDelete" onAction="#handleDeleteRow" mnemonicParsing="false" prefWidth="160.0" text="Löschen" >
            </Button>
         </children>
      </HBox>

      <HBox layoutX="420.0" layoutY="450.0" spacing="10.0" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0">
         <children>
            <TextField fx:id="txtUserrname" prefHeight="26.0" prefWidth="210.0" promptText="Benutzername" />
            <PasswordField fx:id="txtPassword" prefHeight="26.0" prefWidth="210.0" promptText="Passwort" />
            <Button fx:id="btnAdd" onAction="#handleAdd" mnemonicParsing="false" prefWidth="170.0" text="Hinzufügen"></Button>
         </children>
      </HBox>
